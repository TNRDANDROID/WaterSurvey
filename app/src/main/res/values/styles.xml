<resources>

    <!-- Base application theme. -->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    <!-- Base PMAYSurveyapplication theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="font_circular_book">
        <item name="android:fontFamily">@string/font_circular_book</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="font_circular_bold">
        <item name="android:fontFamily">@string/font_circular_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="font_poppins_semibold">
        <item name="android:fontFamily">@string/font_poppins_semibold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_poppins_regular">
        <item name="android:fontFamily">@string/font_poppins_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="font_poppins_medium">
        <item name="android:fontFamily">@string/font_poppins_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="font_poppins_light">
        <item name="android:fontFamily">@string/font_poppins_light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="font_poppins_bold">
        <item name="android:fontFamily">@string/font_poppins_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Theme.AppCompat.Light is not a dialog theme -->

</resources>
